<h1><%= @post.title %></h1>

<div class="link row clearfix">
  <h2>
    <a href="<%= @post.url %>
    "><%= @post.url %>
    </a> <br>
    <small class="author">Submitted <%= time_ago_in_words(@post.created_at) %> by <%= @post.user.email %></small>
  </h2>

</div>

<div class="link row clearfix">
  <h3>Comments </h3>

  <% @post.comments.each do |comment| %>
    <%= render partial: "comments/comments", locals: {commentable: comment} %>
  <% end %>

  <%= render partial: "comments/form", locals: {commentable: @post, post: @post} %>

</div>

<button class="btn btn-default"><%= link_to "Edit", edit_post_path(@post) %></button>
<button class="btn btn-default"><%= link_to "Delete", post_path(@post),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></button>
<button class="btn btn-default"><%= link_to "Return to posts", posts_path %></button>
